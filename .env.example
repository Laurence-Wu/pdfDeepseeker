# Environment Configuration for PDF Translation Pipeline

# Environment
ENVIRONMENT=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=translator
DB_PASSWORD=secure_password
DB_NAME=pdf_translations

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenRouter Configuration (for Gemini in China)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=google/gemini-pro-1.5
OPENROUTER_TIMEOUT=60

# Alternative Models (via OpenRouter)
FALLBACK_MODEL=anthropic/claude-3-opus
SECONDARY_MODEL=meta-llama/llama-3.1-70b

# GPU Support
USE_GPU=false
GPU_DEVICE=cuda:0
GPU_MEMORY_LIMIT=8192

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_WORKERS=10
MAX_PAGES_PER_JOB=2000
BATCH_SIZE=5
PARALLEL_PAGES=10

# Cache
CACHE_TTL=3600
MAX_CACHE_SIZE=10GB

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
